---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Expert Financial Guidance",
    subTitle:
      "Navigating the complexities of financial planning can be daunting. With our expert advisors, we guide you through every step, helping you make informed investment choices and optimize your financial strategies. Whether you are a new investor or an experienced trader, our professionals offer tailored advice to meet your needs.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Blueprints and digital tablet with financial plans.",
    imgTwo: personWorking,
    imgTwoAlt: "Financial advisor working with a client",
  },
  {
    isRightSection: false,
    title: "Turning Investment Plans into Success",
    subTitle:
      "Our financial experts bring precision and expertise to every investment opportunity. From high-yield savings to dynamic brokerage services, Point Bank offers solutions to turn your financial plans into reality. We adhere to the highest standards of investment practices and utilize advanced tools to ensure your financial success.",
    img: beforeAfter,
    imgAlt: "Investment portfolio performance before and after",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Guiding Financial Decisions with Expertise",
    subTitle:
      "Effective financial management is key to achieving your goals. Point Bank provides comprehensive planning and management services to keep your investments on track and maximize returns. Let us handle the complexities of financial strategy while you focus on your long-term objectives.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Financial professionals strategizing",
    imgTwo: aerialView,
    imgTwoAlt: "Overview of financial management",
  },
  {
    isRightSection: false,
    title: "Ensuring Financial Stability and Growth",
    subTitle:
      "Our commitment to your financial success extends beyond initial investments. Point Bank offers ongoing support and financial management services to ensure your portfolio's growth and stability. From regular reviews to market insights, our team is dedicated to providing exceptional support.",
    img: usingTools,
    imgAlt:
      "Financial advisor using advanced tools for portfolio management",
  },
  {
    isRightSection: true,
    title: "Creating Tailored Strategies for Unique Financial Needs",
    subTitle:
      "For our larger clients, Point Bank provides customized financial solutions designed to address specific industry challenges. By understanding your unique financial goals, we craft strategies aimed at optimizing your investments, enhancing performance, and driving long-term success.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Financial strategy development in progress",
    imgTwo: underConstruction,
    imgTwoAlt: "Ongoing financial project under development",
    btnExists: true,
    btnTitle: "Read More",
    btnURL: "#",
  },
];


const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/services",
    "url": "https://screwfast.uk/services",
    "name": "Expert Consultation Services | ScrewFast",
    "description": "Uniting expertise with your vision, ScrewFast provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://screwfast.uk",
        "name": "ScrewFast",
        "description": "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Uniting Expertise with Your Vision"
    subTitle="We take pride in providing comprehensive solutions and exceptional service in the finance industry. Our experienced team is dedicated to supporting your goals from inception to completion with a range of specialized services."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
  title="By the Numbers"
  subTitle="Our dedication to financial excellence and client satisfaction is reflected in our performance metrics. At Point Bank, we strive to provide top-tier financial solutions and services that drive success and build trust."
  mainStatTitle="98%"
  mainStatSubTitle="of our clients are satisfied with our financial services"
  stats={[
    {
      stat: "99.5%",
      description: "successful investment returns",
    },
    {
      stat: "10,000+",
      description: "financial portfolios managed",
    },
    {
      stat: "90%",
      description: "client retention rate",
    },
  ]}
/>

</MainLayout>
